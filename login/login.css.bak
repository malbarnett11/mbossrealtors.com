/* Header/Blog Title */
.header {
  padding: 30px;
  text-align: center;
  background-image: url("https://sp-ao.shortpixel.ai/client/to_webp,q_glossy,ret_img,w_1200,h_400/https://tryallclub.com/wp-content/uploads/2019/04/Quint-NL18-01.jpg");
  background-repeat: no-repeat;
